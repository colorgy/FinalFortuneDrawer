<div class="container-fluid">
	<div class="row">
		<h4 style="text-align: center;">總共人數： <%= @users.count %></h4>
		<% @users.each do |u| %>
			<div class="col s4 m3 l1">
				<div class="user-item">
					<div class="avatar">
						<%= image_tag u.avatar_url %>
					</div>
					<p><a href="/users/<%= u.id %>"><%= u.name %></a></p>
				</div>
			</div>
		<% end %>
	</div>
</div>
